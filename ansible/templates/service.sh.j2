#!/bin/bash

update_linux{{ "() {" }}
    echo "Updating Linux..."
    if sudo apt update -y && sudo apt upgrade -y; then
        echo "Linux updated successfully."
    else
        echo "Failed to update Linux."
    fi
{{ "}" }}

carefully_reboot{{ "() {" }}
    echo "Initiating careful reboot..."
    read -p "Are you sure you want to reboot? {{ "(y/N)" }}: " confirmation
    if {{ "[[ $confirmation =~ ^[Yy]$ ]]" }}; then
        if sudo shutdown -r now; then
            echo "Reboot initiated successfully."
        else
            echo "Failed to initiate reboot."
        fi
    else
        echo "Reboot cancelled."
    fi
{{ "}" }}

create_local_ssh_key{{ "() {" }}
    echo "Creating Local SSH Key..."
    read -p "Enter the email address to use: " emailchoice
    if ssh-keygen -t ed25519 -C "$emailchoice"; then
        echo "SSH Key created successfully."
    else
        echo "Failed to create SSH Key."
    fi
{{ "}" }}

copy_ssh_id_to_host{{ "() {" }}
    host_ip=$1
    echo "Copying SSH ID to $host_ip..."
    if ssh-copy-id server@"$host_ip"; then
        echo "SSH ID copied to $host_ip successfully."
    else
        echo "Failed to copy SSH ID to $host_ip."
    fi
{{ "}" }}

ssh_to_host{{ "() {" }}
    host_ip=$1
    echo "Connecting to $host_ip..."
    if ssh server@"$host_ip"; then
        echo "SSH to $host_ip successful."
    else
        echo "Failed to SSH to $host_ip."
    fi
{{ "}" }}

system_menu{{ "() {" }}
    echo "System Menu"
    echo "1. Update Linux"
    echo "2. Carefully Reboot"
    read -p "Enter your choice {{ "(1-2)" }}: " choice

    case $choice in
        1{{ ")" }} update_linux ;;
        2{{ ")" }} carefully_reboot ;;
        *{{ ")" }} echo "Invalid option." && system_menu ;;
    esac
{{ "}" }}

ssh_config_menu{{ "() {" }}
    echo "SSH Config Menu"
    echo "1. Create SSH Key"
    echo "2. Copy SSH ID to Knight0"
    echo "3. Copy SSH ID to Firehouse"
    echo "4. Copy SSH ID to Oracle0"
    echo "5. Copy SSH ID to Scout1"
    echo "6. Copy SSH ID to Oracle2"
    read -p "Enter your choice {{ "(1-6)" }}: " choice

    case $choice in
        1{{ ")" }} create_local_ssh_key ;;
        2{{ ")" }} copy_ssh_id_to_host "192.168.1.12" ;;
        3{{ ")" }} copy_ssh_id_to_host "192.168.1.200" ;;
        4{{ ")" }} copy_ssh_id_to_host "192.168.1.201" ;;
        5{{ ")" }} copy_ssh_id_to_host "192.168.1.163" ;;
        6{{ ")" }} copy_ssh_id_to_host "192.168.1.202" ;;
        *{{ ")" }} echo "Invalid option." && ssh_config_menu ;;
    esac
{{ "}" }}

ssh_connections_menu{{ "() {" }}
    echo "SSH Connections Menu"
    echo "1. SSH to Knight0"
    echo "2. SSH to Firehouse"
    echo "3. SSH to Oracle0"
    echo "4. SSH to Scout1"
    echo "5. SSH to Oracle2"
    read -p "Enter your choice {{ "(1-5)" }}: " choice

    case $choice in
        1{{ ")" }} ssh_to_host "192.168.1.12" ;;
        2{{ ")" }} ssh_to_host "192.168.1.200" ;;
        3{{ ")" }} ssh_to_host "192.168.1.201" ;;
        4{{ ")" }} ssh_to_host "192.168.1.163" ;;
        5{{ ")" }} ssh_to_host "192.168.1.202" ;;
        *{{ ")" }} echo "Invalid option." && ssh_connections_menu ;;
    esac
{{ "}" }}

main_menu{{ "() {" }}
    echo "Main Menu"
    echo "1. System"
    echo "2. SSH Config"
    echo "3. SSH Connections"
    read -p "Enter your choice {{ "(1-3)" }}: " choice

    case $choice in
        1{{ ")" }} system_menu ;;
        2{{ ")" }} ssh_config_menu ;;
        3{{ ")" }} ssh_connections_menu ;;
        *{{ ")" }} echo "Invalid option." && main_menu ;;
    esac
{{ "}" }}

# Main
main_menu